<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/pref_sorting_key"
        android:title="@string/pref_sorting"
        android:defaultValue="@string/pref_sorting_default"
        android:entries="@array/pref_sort_options"
        android:entryValues="@array/pref_sort_values" />

    <SwitchPreference
        android:key="@string/key_notification"
        android:title="@string/notification_preference"
        android:defaultValue="@string/pref_summary_on"
        android:summaryOn="@string/pref_summary_on"
        android:summaryOff="@string/pref_summary_off" />

</PreferenceScreen>
